{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
        "*": ["./node_modules/*", "./src/types/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}